<div class="floating-header">
	<!-- Section Left -->
	<section class="left">
		<!-- Title/Logo -->
		<div class="title-logo">
			<div class="about">
				<div class="title"><a href="/">{{@blog.title}}</a></div>
			</div>
		</div>
	</section>

	<!-- Section Right -->
	<section class="right">
		{{#if @blog.navigation}}
			<!-- Navigation -->
			<div class="navigation">
				{{navigation}}
			</div>
		{{/if}}

		<!-- Search -->
		<div onclick="toggleSearch()" class="search">
			{{> "icons/search"}}	
		</div>

		{{#if @blog.navigation}}
			<!-- Drawer -->
			<div class="drawer">
				<div class="drawer-handle" onclick="openDrawer()">
					<span class="first"></span>
					<span class="second"></span>
				</div>
			</div>
		{{/if}}
	</section>
</div>